<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="ReactiveSourcesTests" parallel="tests" thread-count="10" verbose="1">
	<test name="Small Tests">
		<groups>
			<run>
				<include name="small" />
				<exclude name="broken" />
			</run>
		</groups>
		<packages>
			<package name="com.ebay.epd.*" />
		</packages>
	</test>
	<test name="Integration Tests">
		<groups>
			<run>
				<include name="integration" />
				<exclude name="broken" />
			</run>
		</groups>
		<packages>
			<package name="com.ebay.epd.*" />
		</packages>
 	</test>
</suite>
